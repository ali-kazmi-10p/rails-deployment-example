%h1 Listing images

%ul(style='list-style: none')
  - @images.each do |image|
    %li.large-4.columns
      %h3= link_to image.title, image
      %p= link_to image_tag(image.url), image, class: 'th'
      %p
        = link_to 'Edit', edit_image_path(image), class: "button secondary small"
        = link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' }, class: "button small alert"

%p.large-12.columns= link_to 'New Image', new_image_path, class: "button"
